<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data class="FidCardDataBinding">
        <variable
            name="fidcard"
            type="com.amirami.simapp.priceindicatortunisia.fidcard.Barecode" />
    </data>
    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="6dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="56dp">


            <TextView
                android:id="@+id/fidcardRvName"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"
                android:gravity="center_vertical"
                android:text="@{fidcard.name}"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@id/dividerFidCardTiket"
                app:layout_constraintEnd_toStartOf="@+id/deleteFidCardRvImvw"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Name" />

            <ImageView
                android:id="@+id/deleteFidCardRvImvw"
                android:layout_width="30dp"
                android:layout_height="0dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="9dp"
                app:layout_constraintBottom_toTopOf="@id/dividerFidCardTiket"
                app:layout_constraintEnd_toStartOf="@+id/editFidcardimVw"
                app:layout_constraintStart_toEndOf="@+id/fidcardRvName"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_delete" />

            <ImageView
                android:id="@+id/editFidcardimVw"
                android:layout_width="30dp"
                android:layout_height="0dp"
                android:layout_marginEnd="9dp"
                android:layout_marginBottom="9dp"
                app:layout_constraintBottom_toTopOf="@+id/dividerFidCardTiket"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/deleteFidCardRvImvw"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_edit" />


            <View
                android:id="@+id/dividerFidCardTiket"
                android:layout_width="wrap_content"
                android:layout_height="0.1dp"
                android:background="@color/defaultcolor"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>